<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="[conv ]clr-namespace:AuroraVisionLauncher.Converters"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mahicon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mod="clr-namespace:AuroraVisionLauncher.Models"
    xmlns:properties="clr-namespace:AuroraVisionLauncher.Properties"
    xmlns:vms="clr-namespace:AuroraVisionLauncher.ViewModels">
    <DataTemplate x:Key="AvAppFacadeDataTemplate" DataType="{x:Type mod:AvAppFacade}">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding OpenContainingFolderCommand}" Header="Open installation folder" />
                    <MenuItem Command="{Binding LaunchWithoutProgramCommand}" Header="Launch the application without loading any program" />
                </ContextMenu>
            </Grid.ContextMenu>
            <Rectangle Fill="Transparent" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image Margin="0,0,8,0" Source="{Binding ExePath, Converter={StaticResource FileIconConverter}}" />
                </Grid>
                <StackPanel
                    Grid.Column="2"
                    Margin="5,0,10,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <mahicon:PackIconMaterialDesign>
                        <mahicon:PackIconMaterialDesign.Style>
                            <Style TargetType="{x:Type mahicon:PackIconMaterialDesign}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="False">
                                        <Setter Property="Kind" Value="PowerOff" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="True">
                                        <Setter Property="Kind" Value="PowerOutline" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </mahicon:PackIconMaterialDesign.Style>
                    </mahicon:PackIconMaterialDesign>
                    <TextBlock Margin="5,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="False">
                                        <Setter Property="Text" Value="Closed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="TRue">
                                        <Setter Property="Text" Value="Running" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                <Button
                    x:Name="button"
                    Grid.Column="3"
                    Width="40"
                    Margin="3,5,3,5"
                    Command="{Binding OpenContainingFolderCommand}"
                    ToolTip="Open installation folder">
                    <mahicon:PackIconMaterial Kind="FolderOpen" />
                </Button>
                <Button
                    Grid.Column="4"
                    Width="40"
                    Margin="3,5,3,5"
                    Command="{Binding LaunchWithoutProgramCommand}"
                    ToolTip="Launch the application without loading any program">
                    <mahicon:PackIconMaterial Kind="Launch" />
                </Button>
                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    TextBlock.FontSize="18">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text=" - " />
                        <TextBlock Text="{Binding Version}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding SecondaryVersion, StringFormat={}({0})}" Visibility="{Binding SecondaryVersion, Converter={StaticResource NullVisibilityConverter}}" />
                        <TextBlock
                            FontWeight="Bold"
                            Foreground="DarkOrange"
                            Text="{x:Static properties:Resources.AvAppDevelopmentVersion}"
                            Visibility="{Binding IsDevelopmentBuild, Converter={StaticResource BoolVisibilityConverter}}" />
                    </StackPanel>
                    <TextBlock
                        FontSize="16"
                        Foreground="Gray"
                        Text="{Binding ExePath}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>