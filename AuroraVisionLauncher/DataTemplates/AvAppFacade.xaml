<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="[conv ]clr-namespace:AuroraVisionLauncher.Converters"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mahicon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mod="clr-namespace:AuroraVisionLauncher.Models"
    xmlns:properties="clr-namespace:AuroraVisionLauncher.Properties"
    xmlns:vms="clr-namespace:AuroraVisionLauncher.ViewModels">
    <DataTemplate x:Key="AvAppFacadeDataTemplate" DataType="{x:Type mod:AvAppFacade}">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding OpenContainingFolderCommand}" Header="{x:Static properties:Resources.AvAppOpenInstallationFolder}" />
                    <MenuItem Command="{Binding LaunchWithoutProgramCommand}" Header="{x:Static properties:Resources.AvAppLaunchWithNoProgram}" />
                    <MenuItem
                        Command="{Binding KillAllProcessesCommand}"
                        Header="{x:Static properties:Resources.AvAppKillAllProcesses}"
                        IsEnabled="{Binding IsLaunched}" />
                </ContextMenu>
            </Grid.ContextMenu>
            <Rectangle Fill="Transparent" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image Margin="0,0,8,0" Source="{Binding ExePath, Converter={StaticResource FileIconConverter}}" />
                </Grid>
                <StackPanel
                    Grid.Column="2"
                    Margin="5,0,10,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Processes" ItemsSource="{Binding ActiveProcesses}">
                                <MenuItem.ItemContainerStyle>
                                    <Style BasedOn="{StaticResource MahApps.Styles.MenuItem}" TargetType="MenuItem">
                                        <Setter Property="Header" Value="{Binding MainWindowTitle}" />
                                        <Setter Property="Command" Value="{Binding KillCommand}" />
                                        <!--<Setter Property="ToolTip">
                                            <Setter.Value>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding FilePath}" />
                                                    <TextBlock Text="{Binding OpenedOn, StringFormat={}Opened on {0:yyyy-MM-dd HH:mm:ss}, Converter={StaticResource UtcToLocalConverter}}" />
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                <Setter Property="Command" Value="{Binding DataContext.MenuOpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                        <Setter Property="CommandParameter" Value="{Binding}" />
                                        <Setter Property="InputGestureText" Value="{Binding Index, Converter={StaticResource IndexConverter}, StringFormat={}Alt + {0}}" />
                                <Setter Property="Icon">
            <Setter.Value>
                <Image Source="{Binding Icon}" />
            </Setter.Value>
        </Setter>-->


                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                            <MenuItem Header="Kill All" />
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                    <mahicon:PackIconMaterialDesign>
                        <mahicon:PackIconMaterialDesign.Style>
                            <Style TargetType="{x:Type mahicon:PackIconMaterialDesign}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="False">
                                        <Setter Property="Kind" Value="PowerOff" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="True">
                                        <Setter Property="Kind" Value="PowerOutline" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </mahicon:PackIconMaterialDesign.Style>
                    </mahicon:PackIconMaterialDesign>
                    <TextBlock Margin="5,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="False">
                                        <Setter Property="Text" Value="Not running" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLaunched}" Value="TRue">
                                        <Setter Property="Text" Value="{Binding ActiveProcessesNumber, StringFormat={x:Static properties:Resources.AvAppProcessesActive}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                <Button
                    Grid.Column="3"
                    Width="40"
                    Margin="3,5,3,5"
                    Command="{Binding CopyExecutablePathCommand}"
                    ToolTip="{x:Static properties:Resources.AvAppCopyPath}">
                    <mahicon:PackIconLucide Kind="ClipboardCopy" />
                </Button>
                <Button
                    x:Name="button"
                    Grid.Column="4"
                    Width="40"
                    Margin="3,5,3,5"
                    Command="{Binding OpenContainingFolderCommand}"
                    ToolTip="{x:Static properties:Resources.AvAppOpenInstallationFolder}">
                    <mahicon:PackIconMaterial Kind="FolderOpen" />
                </Button>
                <Button
                    Grid.Column="5"
                    Width="40"
                    Margin="3,5,3,5"
                    Command="{Binding LaunchWithoutProgramCommand}"
                    ToolTip="{x:Static properties:Resources.AvAppLaunchWithNoProgram}">
                    <mahicon:PackIconMaterial Kind="Launch" />
                </Button>
                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    TextBlock.FontSize="18">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <Run Text="{Binding Name, Mode=OneWay, StringFormat='{}{0} - '}" />
                            <Run Text="{Binding Version, Mode=OneWay, StringFormat='{}{0} '}" />
                            <Run Text="{Binding SecondaryVersion, Mode=OneWay, TargetNullValue='', StringFormat='{}({0}) '}" />
                        </TextBlock>
                        <TextBlock
                            FontWeight="Bold"
                            Foreground="DarkOrange"
                            Text="{x:Static properties:Resources.AvAppDevelopmentVersion}"
                            Visibility="{Binding IsDevelopmentVersion, Converter={StaticResource BoolVisibilityConverter}}" />
                    </StackPanel>
                    <TextBlock
                        FontSize="16"
                        Foreground="Gray"
                        Text="{Binding ExePath}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>